{
  "version": 2,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "build": {
    "env": {
      "PYTHON_INSTALLER": "pip"
    }
  },
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@4.3.1",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "Claude_HTML.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/",
      "dest": "/Claude_HTML.html"
    }
  ]
}
