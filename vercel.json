{
  "version": 2,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "buildCommand": "cd frontend-svelte && npm install && npm run build",
  "outputDirectory": "frontend-svelte/.svelte-kit/output",
  "framework": "sveltekit",
  "build": {
    "env": {
      "PYTHON_INSTALLER": "pip"
    }
  },
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@4.3.1",
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.py"
    }
  ]
}
